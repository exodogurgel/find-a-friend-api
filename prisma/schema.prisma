// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id              String   @id @default(cuid())
  name            String
  email           String   @unique
  password_hash   String
  cep             String
  address         String
  whatsapp_number String
  created_at      DateTime @default(now())

  pet Pet[]

  @@map("orgs")
}

model Pet {
  id           String @id @default(cuid())
  name         String
  age          String
  city         String
  description  String
  photo        String
  energy       Int
  independence String
  size         String
  type         String
  environment  String

  petGalery            PetGalery[]
  adoptionRequirements AdoptionRequirements[]

  org    Org    @relation(fields: [org_id], references: [id])
  org_id String

  @@map("pets")
}

model PetGalery {
  id    String @id @default(cuid())
  image String

  pet    Pet    @relation(fields: [pet_id], references: [id])
  pet_id String

  @@map("pet_galery")
}

model AdoptionRequirements {
  id    String @id @default(cuid())
  title String

  pet    Pet    @relation(fields: [pet_id], references: [id])
  pet_id String

  @@map("adoption_requirements")
}
